# ========================
# Core App
# ========================
NODE_ENV=development
PORT=8001
BASE_URL=http://localhost:8001

# ========================
# Sessions / Cookies
# ========================
# Generate one: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SESSION_SECRET=change_this_to_a_long_random_string
COOKIE_NAME=redup.sid
SESSION_MAX_AGE_DAYS=7
COOKIE_SECURE=false    # true if behind HTTPS/production

# ========================
# Database
# ========================
DB_PATH=./data/redup.sqlite

# ========================
# Reddit OAuth / API
# ========================
# Create a Reddit "web app" at https://www.reddit.com/prefs/apps
REDDIT_CLIENT_ID=
REDDIT_CLIENT_SECRET=
REDDIT_REDIRECT_URI=http://localhost:8001/auth/reddit/callback
REDDIT_USER_AGENT=Redup/0.1 by YOUR_REDDIT_USERNAME
# Typical scopes for posting + reading rules/flair; trim as needed.
REDDIT_SCOPES=identity,read,submit,flair,history,subscribe,vote
REDDIT_APP_KIND=webapp

# If you later switch to a "script" app for service posting (optional):
REDDIT_USERNAME=
REDDIT_PASSWORD=

# ========================
# Discord OAuth (optional admin login)
# ========================
# Create an app at https://discord.com/developers/applications
DISCORD_CLIENT_ID=
DISCORD_CLIENT_SECRET=
DISCORD_CALLBACK_URL=http://localhost:8001/auth/discord/callback
OWNER_DISCORD_ID=

# ========================
# Queues / Workers (optional; enable when you add BullMQ/Redis)
# ========================
REDIS_URL=             # e.g. redis://localhost:6379
QUEUE_CONCURRENCY=5

# ========================
# Scheduler / Analytics
# ========================
SCHEDULER_TZ=America/Detroit
CRON_POSTER=*/5 * * * *         # example: check queue every 5 minutes
ANALYTICS_POLL_INTERVAL_MIN=15  # how often to refresh post stats

# ========================
# Rate Limiting / Security
# ========================
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=100
CORS_ORIGIN=                  # e.g. https://reddit.chugzone.com (leave empty to disable)

# ========================
# Logging
# ========================
LOG_LEVEL=info
